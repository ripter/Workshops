function med_wall(x, y)
	spr(4, x,  y)
	spr(5, x+8,y)
	spr(20,x,  y+8)
	spr(21,x+8,y+8)
end

function spr_16(id, x, y)
 spr(id,   x,  y)
	spr(id+1, x+8,y)
	spr(id+16,x,  y+8)
	spr(id+17,x+8,y+8)
end
